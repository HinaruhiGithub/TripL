<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#D82525"
    android:paddingBottom="16dp">

    <Button
        android:id="@+id/category_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_default_design"
        android:backgroundTint="#00FFFFFF"
        android:drawableStart="@drawable/button_default_design"
        android:drawableLeft="@drawable/button_default_design"
        android:drawableTop="@drawable/button_default_design"
        android:drawableEnd="@drawable/button_default_design"
        android:drawableRight="@drawable/button_default_design"
        android:drawableBottom="@drawable/button_default_design"
        android:text="Button"
        android:textColor="@color/black_overlay"
        android:textSize="20sp" />
</LinearLayout>